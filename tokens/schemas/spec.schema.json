{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Toqin Design System Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "displayName": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "mediaQueries": {
      "type": "object"
    },
    "fontFaces": {
      "type": "array",
      "items": {
        "$id": "#fontFace",
        "type": "object",
        "properties": {
          "fontDisplay": {
            "type": "string"
          },
          "fontFamily": {
            "type": "string"
          },
          "fontStretch": {
            "type": "string"
          },
          "fontStyle": {
            "type": "string"
          },
          "fontWeight": {
            "type": "string"
          },
          "fontFeatureSettings": {
            "type": "string"
          },
          "fontVariationSettings": {
            "type": "string"
          },
          "sizeAdjust": {
            "type": "string"
          },
          "unicodeRange": {
            "type": "string"
          },
          "baseUrl": {
            "type": "string"
          },
          "fonts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "format": {
                  "type": "string"
                }
              }
            }
          },
          "local": {
            "type": "string"
          }
        },
        "required": [ "fontFamily", "baseUrl", "fonts" ]
      }
    },
    "extends": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "includes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "imports": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "layers": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tokens": {
      "type": "array",
      "items": {
        "$id": "#token",
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "description": {
            "type": "string"
          },
          "value": { },
          "tokens": {
            "type": "array",
            "items": {
              "$ref": "#token"
            }
          }
        },
        "required": [
          "name"
        ]
      }
    },
    "designs": {
      "type": "array",
      "items": {
        "$id": "#design",
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "layer": {
            "type": "string"
          },
          "root": {
            "type": "boolean"
          },
          "important": {
            "type": "boolean"
          },
          "selectors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "description": {
            "type": "string"
          },
          "rules": { },
          "children": {
            "type": "array",
            "items": {
              "$ref": "#design"
            }
          },
          "variants": {
            "type": "array",
            "items": {
              "$ref": "#design"
            }
          },
          "directChildren": {
            "type": "boolean"
          }
        },
        "required": [
          "name",
          "rules"
        ]
      }
    },
    "animations": {
      "type": "array",
      "items": {
      }
    },
    "mixins": {
      "type": "array",
      "items": {
      }
    }
  },
  "required": [
    "name"
  ]
}
