{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "rules": {
      "$ref": "./css-properties.schema.json"
    },
    "arrayOfStrings": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "commonEntity": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    }
  },
  "title": "Toqin Design System Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "displayName": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "mediaQueries": {
      "type": "object"
    },
    "fontFaces": {
      "type": "array",
      "items": {
        "$id": "#fontFace",
        "type": "object",
        "properties": {
          "fontDisplay": {
            "type": "string"
          },
          "fontFamily": {
            "type": "string"
          },
          "fontStretch": {
            "type": "string"
          },
          "fontStyle": {
            "type": "string"
          },
          "fontWeight": {
            "type": "string"
          },
          "fontFeatureSettings": {
            "type": "string"
          },
          "fontVariationSettings": {
            "type": "string"
          },
          "sizeAdjust": {
            "type": "string"
          },
          "unicodeRange": {
            "type": "string"
          },
          "baseUrl": {
            "type": "string"
          },
          "fonts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "format": {
                  "type": "string"
                }
              },
              "required": [ "name", "format" ]
            }
          },
          "local": {
            "type": "string"
          }
        },
        "required": [ "fontFamily", "baseUrl", "fonts" ]
      }
    },
    "extends": {
      "$ref": "#/definitions/arrayOfStrings"
    },
    "includes": {
      "$ref": "#/definitions/arrayOfStrings"
    },
    "imports": {
      "$ref": "#/definitions/arrayOfStrings"
    },
    "layer": {
      "type": "string"
    },
    "layers": {
      "$ref": "#/definitions/arrayOfStrings"
    },
    "tokens": {
      "type": "array",
      "items": {
        "$id": "#token",
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "tags": {
            "$ref": "#/definitions/arrayOfStrings"
          },
          "description": {
            "type": "string"
          },
          "value": { },
          "tokens": {
            "type": "array",
            "items": {
              "$ref": "#token"
            }
          }
        },
        "required": [
          "name"
        ]
      }
    },
    "designs": {
      "type": "array",
      "items": {
        "$id": "#design",
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "layer": {
            "type": "string"
          },
          "root": {
            "type": "boolean"
          },
          "important": {
            "type": "boolean"
          },
          "selectors": {
            "$ref": "#/definitions/arrayOfStrings"
          },
          "description": {
            "type": "string"
          },
          "rules": {
            "$ref": "#/definitions/rules"
          },
          "children": {
            "type": "array",
            "items": {
              "$ref": "#design"
            }
          },
          "variants": {
            "type": "array",
            "items": {
              "$ref": "#design"
            }
          },
          "directChildren": {
            "type": "boolean"
          }
        },
        "required": [
          "name",
          "rules"
        ]
      }
    },
    "animations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "frames": {
            "type": "object",
            "properties": {
              "from": {
                "$ref": "#/definitions/rules"
              },
              "to": {
                "$ref": "#/definitions/rules"
              }
            },
            "additionalProperties": {
              "$ref": "#/definitions/rules"
            }
          }
        },
        "required": [
          "name",
          "frames"
        ]
      }
    },
    "mixins": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "group": {
            "type": "string"
          },
          "layer": {
            "type": "string"
          },
          "select": {
            "$ref": "#/definitions/arrayOfStrings"
          },
          "ruleSets": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "selector": {
                  "type": "string"
                },
                "rules": {
                  "$ref": "#/definitions/rules"
                }
              },
              "required": [
                "selector",
                "rules"
              ]
            }
          }
        },
        "required": [
          "name",
          "group",
          "select",
          "ruleSets"
        ]
      }
    }
  },
  "required": [
    "name"
  ]
}
