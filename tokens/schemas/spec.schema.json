{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "rules": {
      "$ref": "./css-properties.schema.json"
    },
    "commonEntity": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    },
    "fontFace": {
      "$id": "#fontFace",
      "type": "object",
      "properties": {
        "fontFamily": {
          "type": "string"
        },
        "fonts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "format": {
                "type": "string"
              }
            }
          }
        },
        "baseUrl": {
          "type": "string"
        }
      },
      "required": [
        "fontFamily",
        "fonts",
        "baseUrl"
      ]
    },
    "arrayOfString": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tokensEntity": {
      "$id": "#token",
      "type": "object",
      "properties": {
        "value": { },
        "tokens": {
          "type": "array",
          "items": {
            "$ref": "#token"
          }
        }
      }
    },
    "designEntity": {
      "$id": "#design",
      "type": "object",
      "properties": {
        "rules": {
          "$ref": "#/definitions/rules"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#design"
          }
        },
        "variants": {
          "type": "array",
          "items": {
            "$ref": "#design"
          }
        },
        "directChildren": {
          "type": "boolean"
        }
      },
      "required": [
        "name",
        "rules"
      ]
    },
    "animatedEntity": {
      "type": "object",
      "properties": {
        "frames": {
          "type": "object",
          "properties": {
            "from": {
              "$ref": "#/definitions/rules"
            },
            "to": {
              "$ref": "#/definitions/rules"
            }
          },
          "additionalProperties": {
            "$ref": "#/definitions/rules"
          }
        }
      }
    },
    "commonTokensEntity": {
      "allOf": [
        {
          "$ref": "#/definitions/commonEntity"
        },
        {
          "$ref": "#/definitions/tokensEntity"
        }
      ]
    },
    "commonDesignsEntity": {
      "allOf": [
        {
          "$ref": "#/definitions/commonEntity"
        },
        {
          "$ref": "#/definitions/designEntity"
        }
      ]
    },
    "commonAnimationsEntity": {
      "allOf": [
        {
          "$ref": "#/definitions/commonEntity"
        },
        {
          "$ref": "#/definitions/animatedEntity"
        }
      ]
    }
  },
  "title": "Toqin Design System Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "displayName": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "mediaQueries": {
      "type": "object"
    },
    "fontFaces": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/fontFace"
      }
    },
    "extends": {
      "$ref": "#/definitions/arrayOfString"
    },
    "includes": {
      "$ref": "#/definitions/arrayOfString"
    },
    "imports": {
      "$ref": "#/definitions/arrayOfString"
    },
    "layer": {
      "type": "string"
    },
    "layers": {
      "$ref": "#/definitions/arrayOfString"
    },
    "tokens": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/commonTokensEntity"
      }
    },
    "designs": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/commonDesignsEntity"
      }
    },
    "animations": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/commonAnimationsEntity"
      }
    },
    "mixins": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/commonEntity"
      }
    }
  },
  "required": [
    "name"
  ]
}
