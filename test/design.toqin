{
  "name": "Toqin",
  "version": "1.0.0",
  "description": "Toqin Design System",
  "variablePrefix": "tq",
  "tokens": [
    {
      "name": "palette",
      "type": "color",
      "description": "Base Color Palettes",
      "tokens": [
        {
          "name": "white",
          "tags": ["white"],
          "description": "White",
          "value": "#dddddd"
        },
        {
          "name": "black",
          "tags": ["black"],
          "description": "Black",
          "value": "#000000"
        }
      ]
    },
    {
      "name": "color",
      "type": "color",
      "description": "Color palette",
      "tokens": [
        {
          "name": "foreground",
          "tags": ["text"],
          "description": "Text color",
          "value": {
            "@light": "@palette.black",
            "@dark": "@palette.white"
          }
        },
        {
          "name": "background",
          "tags": ["background"],
          "description": "Background color",
          "value": {
            "@light": "@palette.white",
            "@dark": "@palette.black"
          }
        }
      ]
    },
    {
      "name": "space",
      "type": "unit",
      "description": "Spacing",
      "tokens": [
        {
          "name": "sm",
          "value": "8px"
        },
        {
          "name": "md",
          "value": "10px"
        },
        {
          "name": "lg",
          "value": "12px"
        }
      ]
    }
  ],
  "designs": [
    {
      "name": "button",
      "tags": ["button", ".button"],
      "description": "Default button style",
      "styles": {
        "--background": {
          ".": "@color.foreground",
          "@dark": "@color.background"
        },
        "--color": {
          "@light": "@color.foreground",
          "@dark": "@color.background",
          "::hover": {
            "@light": "@color.foreground",
            "@dark": "@color.background"
          }
        },
        "--shadow-color": {
          "@light": "@color.foreground",
          "@dark": "@color.background"
        },
        "background": "~background",
        "color": "~color",
        "border-color": {
          "@light": "@color.foreground",
          "@dark": "@color.background"
        },
        "padding": "@space.sm @space.md",
        "align-content": "center",
        "border-radius": "@space.sm"
      },
      "variants": [
        {
          "name": "solid",
          "description": "Solid button style",
          "styles": {
            "background": "@color.foreground",
            "color": "@color.background",
            "ring": {
              "::focus": "@color.foreground"
            }
          }
        },
        {
          "name": "destructive",
          "description": "Destructive button style",
          "styles": {
            "background": {
              "@": "@color.destructive",
              "::hover": "@color.destructive.hover",
              "::focus": "@color.destructive.focus",
              "::active": "@color.destructive.active",
              "::disabled": "@color.destructive.disabled"
            },
            "color": "@color.background",
            "ring": {
              "::focus": "@color.destructive"
            }
          }
        }
      ]
    }
  ]
}