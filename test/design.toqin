  "designs": [
    {
      "name": "root",
      "tags": ["html", "body"],
      "important": true,
      "description": "Root design",
      "styles": {
        "margin": "0",
        "padding": "0",
        "width": "100%",
        "height": "100%"
      }
    },
    {
      "name": "body",
      "tags": ["body"],
      "important": true,
      "description": "Body design",
      "styles": {
        "font-family": "@font.family",
        "font-size": "@font.size.sm",
        "line-height": "@font.height",
        "font-weight": "@font.weight.regular",
        "color": "@color.foreground",
        "background-color": "@color.background"
      }
    },
    {
      "name": "stretch",
      "tags": [".stretch"],
      "description": "Stretch design",
      "styles": {
        "width": "100%",
        "height": "100%"
      }
    },
    {
      "name": "input",
      "tags": ["input", ".input"],
      "description": "Input design",
      "styles": {
        "--outline": "transparent",
        "border": "1x solid ~outline",
        "outline": "none"
      },
      "variants": [
        {
          "name": "outline",
          "description": "Outline input",
          "styles": {
            "--outline": {
              "@": "@color.border",
              "::focus": "@color.primary"
            }
          }
        }
      ]
    },
    {
      "name": "text-field",
      "tags": [".text-field"],
      "description": "Text field design",
      "styles": {
        "--outline": {
          "@": "transparent",
          "::has(input:focus, input.focus)": "@color.primary"
        }
      },
      "children": [
        {
          "name": "input",
          "tags": ["input", ".input"],
          "description": "Input design",
          "styles": {
            "--outline": "transparent",
            "border": "none",
            "outline": "none"
          }
        }
      ]
    },
    {
      "name": "scrollable",
      "tags": [".scrollable"],
      "description": "Scrollable layout",
      "styles": {
        "overflow": "auto"
      }
    },
    {
      "name": "theme",
      "tags": [".theme-toggle ion-icon"],
      "description": "Theme toggle style",
      "styles": {
        "color": {
          "@": "@palette.blue.500",
          "@dark": "@palette.blue.400|blue"
        }
      }
    }
  ]
