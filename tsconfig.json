{
  "extends": "../configs/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/esm",
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false
  },
  "include": ["./src"],
  "exclude": ["./dist", "./node_modules"]
}
